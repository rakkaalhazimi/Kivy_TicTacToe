<RootScreen>:

    StartScreen:
        name: "start"

        Label:
            text: "Unbeatable\nTic-Tac-Toe"
            font_size: 50
            size_hint: None, None
            pos_hint: {"center_x": .5, "center_y": .7}

        Button:
            text: "Start"
            size_hint: .3, .07
            pos_hint: {"center_x": .5, "center_y": .3}
            on_press: self.parent.on_press()

    MainScreen:
        name: "main"
        game_board: game_board

        GameBoard:
            id: game_board
            pos_hint: {"center_x": .5, "center_y": .5}
            size_hint: 0.5, 0.5
            spacing: 5, 5

        Label:
            id: turn_label
            text: "Human Turn"
            pos_hint: {"center_x": .5, "center_y": .85}
            size_hint: None, None

        Button:
            pos_hint: {"center_x":.5, "center_y":.1}
            size_hint: .3, .07
            text: "Back to main"
            on_press: self.parent.on_press()

<GameResult>:
    size_hint: 0.7, 0.3

<MoveButton>:
    text: "..."
    font_size: 40
    background_color: [.3, .3, .3, .5]
    background_disabled_normal: self.background_normal