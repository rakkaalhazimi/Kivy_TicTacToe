<RootScreen>:

    StartScreen:
        name: "start"

        Label:
            text: "Unbeatable\nTic-Tac-Toe"

            size_hint: None, None
            pos_hint: {"center_x": .5, "center_y": .7}

        Button:
            text: "Ikuzo !!"
            size_hint: .3, .07
            height: 50
            width: self.texture_size[0] + 100
            pos_hint: {"center_x": .5, "center_y": .3}
            on_press: self.parent.on_press()

    MainScreen:
        name: "main"
        game_board: game_board

        GameBoard:
            id: game_board
            pos_hint: {"center_x": .5, "center_y": .5}
            size_hint: 0.5, 0.5

        Label:
            id: turn_label
            text: "Human Turn"
            pos_hint: {"center_x": .5, "center_y": .85}
            size_hint: None, None

        Button:
            pos_hint: {"center_x":.5, "center_y":.1}
            size_hint: .3, .07
            text: "Back to main"
            on_press: self.parent.on_press()

<GameResult>:
    size_hint: 0.7, 0.3